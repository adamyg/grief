all:		directories $(D_BIN)/$(TARGET)

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(D_BIN)/$(TARGET) $(TARGET) $(OBJS) $(CLEAN) $(XCLEAN) >/dev/null 2>&1

.PHONY:		directories
directories:		$(D_OBJDEP)/.created $(OBJS)

$(D_BIN)/$(TARGET):	MAPFILE=$(basename $@).map
$(D_BIN)/$(TARGET):	$(OBJS)
		$(CXX) $(LDFLAGS) -o $@ $(OBJS) $(LDLIBS) @LDMAPFILE@

%/.created:
		-@mkdir $(@D)
		@echo "++ do not delete, managed content ++" > $@

-include $(CSRC:%.c=$(D_OBJDEP)/%.Po)
-include $(CPPSRC:%.cpp=$(D_OBJDEP)/%.Po)

$(D_OBJ)/%$(O):		%.c
		$(CC) $(CFLAGS) -o $@ -c $<
		$(CCDEPEND)

$(D_OBJ)/%$(O):		%.cpp
		$(CXX) $(CXXFLAGS) -o $@ -c $<
		$(CXXDEPEND)

