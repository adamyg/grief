# libmagic makefile
#
#
#

@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
E=
O=		.o
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
AR=		@AR@
RANLIB=		@RANLIB@
RM=		@RM@
PERL=		@PERL@
LIBTOOL=	@LIBTOOL@

# Common flags

ARFLAGS=	rcv
XFLAGS=		
COPT=		@CFLAGS@
CWARN=		@CWARN@
CDEBUG=		@CDEBUG@
LDEBUG=		@LDEBUG@
CINCLUDE=	-I. -I$(D_INC) @CINCLUDE@
ifeq ("mingw32","@build_os@")
CINCLUDE+=	-I../include -I../../libw32
endif
CEXTRA=		@DEFS@
CFLAGS=		$(CDEBUG) $(COPT) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CNFLAGS=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
YFLAGS=		-d
LDFLAGS=	$(LDEBUG) @LDFLAGS@
LDLIBS=		$(D_LIB)/$(LP)regex$(A) -L$(D_LIB) @LIBS@
ifeq ("mingw32","@build_os@")
LDLIBS+=	-lw32 -lshlwapi -lpsapi -lole32 -luuid -lgdi32 -luserenv -lnetapi32 -ladvapi32 -lWs2_32
endif
LDLIBS+=	@LIBM@ @EXTRALIBS@

RMFLAGS=	-f

# Directories

D_BIN=		$(ROOT)/bin
D_INC=		$(ROOT)/include
D_OBJ=		$(ROOT)/objects/libmagic
D_LIB=		$(ROOT)/lib

############################################################

# targets

MAGICLIB=	$(D_LIB)/$(LP)magic_static$(A)
MAGICDLL=	$(D_LIB)/$(LP)magic.la

MAGICUTIL=	$(D_BIN)/grfile$(E)
MAGICDB=	$(D_BIN)/magic.mgc

#VERSION=	5.1.1
#MAGICPACKED=	file-511.tgz
#MAGICSRC=	./file-511
#MAGDIR=	./file-511/src/magic
VERSION=	5.29
MAGICPACKED=	file-5.29.gr.tgz
MAGICSRC=	./file-5.29/src
MAGDIR=		./file-5.29/magic

VERSIONSPEC=	$(subst .,:,$(VERSION))
VPATH=		$(MAGICSRC)

LIBOBJS=\
	$(D_OBJ)/apprentice$(O)		\
	$(D_OBJ)/ascmagic$(O)		\
	$(D_OBJ)/cdf$(O)		\
	$(D_OBJ)/cdf_time$(O)		\
	$(D_OBJ)/compress$(O)		\
	$(D_OBJ)/encoding$(O)		\
	$(D_OBJ)/fsmagic$(O)		\
	$(D_OBJ)/funcs$(O)		\
	$(D_OBJ)/is_tar$(O)		\
	$(D_OBJ)/magic$(O)		\
	$(D_OBJ)/print$(O)		\
	$(D_OBJ)/readcdf$(O)		\
	$(D_OBJ)/softmagic$(O)		\
	$(D_OBJ)/getline$(O)		\
	$(D_OBJ)/asprintf$(O)		\
	$(D_OBJ)/vasprintf$(O)		\
	$(D_OBJ)/strlcpy$(O)		\
	$(D_OBJ)/strlcat$(O)
ifeq ($(VERSION),5.29)
LIBOBJS+=\
	$(D_OBJ)/fmtcheck$(O)		\
	$(D_OBJ)/der$(O)		\
	$(D_OBJ)/pread$(O)		\
	$(D_OBJ)/strcasestr$(O)		\
	$(D_OBJ)/ctime_r$(O)		\
	$(D_OBJ)/asctime_r$(O)		\
	$(D_OBJ)/localtime_r$(O)	\
	$(D_OBJ)/gmtime_r$(O)
endif

DLLOBJS=\
	$(subst $(O),.lo,$(LIBOBJS))

UTILOBJS=\
	$(D_OBJ)/file$(O)		\
	$(D_OBJ)/getopt_long$(O)	\
	$(D_OBJ)/getline$(O)

XCLEAN+=	$(MAGICDB) magic.mgc
OBJS=		$(LIBOBJS) $(DLLOBJS) $(UTILOBJS)
LIBS=		$(MAGICLIB) $(MAGICDLL)
TSKS=		$(MAGICUTIL)

# Rules

all:			source unpacked
unpacked:		$(LIBS) $(TSKS) $(MAGICDB) installinc 

$(MAGICLIB):		CEXTRA += -D__LIBMAGIC_BUILD -DLIBMAGIC_STATIC -D_WIN32
$(MAGICLIB):		$(D_OBJ)/.created $(LIBOBJS)
		$(RM) $(RMFLAGS) $@ >/dev/null 2>&1
		$(AR) $(ARFLAGS) $@ $(LIBOBJS)
		$(RANLIB) $@

$(MAGICDLL):		CEXTRA += -D__LIBMAGIC_BUILD -DLIBMAGIC_DYNAMIC -D_WIN32
$(MAGICDLL):		$(DLLOBJS)
		$(LIBTOOL) --mode=link $(CC) -o $@ $^ -version-number $(VERSIONSPEC) \
			-rpath $(D_LIB) -bindir $(D_BIN) $(LDLIBS)

$(MAGICUTIL):		$(UTILOBJS)
		$(CC) $(LDFLAGS) $^ -o $@ $(D_LIB)/libmagic$(A) $(LDLIBS)

$(MAGICDB):		magic.mgc
		@echo publishing magicdb $(MAGICDB) ...
		@cp magic.mgc $(MAGICDB)

magic.mgc:		MSRC=$(wildcard $(MAGDIR)/Magdir/*)
magic.mgc:		$(MSRC) Makefile
		@$(RM) -fr magic
		-@mkdir magic
		@cp $(MSRC)/Magdir/* magic
		$(MAGICUTIL) -C -m magic
		@$(RM) -fr magic

source:			.unpacked.$(VERSION)
		$(MAKE) unpacked

.unpacked.$(VERSION):	$(MAGICPACKED)
		@echo "do not delete, managed file" > $@
		@echo "unpacking source $(MAGICPACKED)"
		@gzip -c -d $(MAGICPACKED) | tar -xvf -

installinc:		../include/.created
		@echo publishing headers 'magic.h' ...
		@cp $(MAGICSRC)/magic.h ../include

%/.created:
		-@mkdir $(@D)
		@echo "do not delete, managed directory" > $@

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(TSKS) $(LIBS) $(CLEAN) $(XCLEAN) >nul 2>&1
		-@$(LIBTOOL) --mode=clean $(RM) $(DLLOBJS) >nul 2>&1
		-@$(RM) $(LIBOBJS) $(UTILOBJS) >nul 2>&1

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -D_CRT_SECURE_NO_DEPRECATE -o $@ -c $<

$(D_OBJ)/%.lo:		%.c
		$(LIBTOOL) --mode=compile $(CC) $(CFLAGS) -D_CRT_SECURE_NO_DEPRECATE -o $@ -c $<

#end
