@SET_MAKE@

D_OBJ=		../objects
D_LIB=		../lib

define contrib-all
	$(MAKE) -C makedepend
	$(MAKE) -C libregex
	$(MAKE) -C libz
	$(MAKE) -C libbzip2
	$(MAKE) -C libmagic
	$(MAKE) -C libguess
	$(MAKE) -C libarchive
	$(MAKE) -C hunspell
endef
ifeq ("win32","@build_os@")
define contrib-allx
	$(MAKE) -C libcitrus
	$(MAKE) -C libintl
	$(MAKE) -C libiconv
endef
endif

define contrib-clean
	$(MAKE) -C makedepend  clean
	$(MAKE) -C libregex    clean
	$(MAKE) -C libz        clean
	$(MAKE) -C libbzip2    clean
	$(MAKE) -C libmagic    clean
	$(MAKE) -C libguess    clean
	$(MAKE) -C libarchive  clean
	$(MAKE) -C hunspell    clean
endef
ifeq ("win32","@build_os@")
define contrib-cleanx
	$(MAKE) -C libcitrus   clean
	$(MAKE) -C libintl     clean
	$(MAKE) -C libiconv    clean
endef
endif

.PHONY:		all
all:			directories
		$(contrib-all)
		$(contrib-allx)

.PHONY:		clean
clean:
		$(contrib-clean)
		$(contrib-cleanx)

directories:		./include/.created $(D_OBJ)/.created $(D_LIB)/.created

%/.created:
		-@mkdir $(@D)
		@echo "do not delete, managed directory" > $@

#end
