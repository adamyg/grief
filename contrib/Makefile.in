@SET_MAKE@

# Configuration

ifeq ("$(BUILD_TYPE)","")	#default
BUILD_TYPE=	debug
MAKEFLAGS+=	BUILD_TYPE=debug
endif
ifneq ("$(BUILD_TYPE)","release")
RTSUFFIX=d
endif

# Directories

D_OBJ=		../objects@TOOLCHAINEXT@/$(BUILD_TYPE)
D_LIB=		../lib@TOOLCHAINEXT@/$(BUILD_TYPE)
D_BIN=		../bin@TOOLCHAINEXT@/$(BUILD_TYPE)


#########################################################################################
# Rules

define contrib-all
	$(MAKE) -C makedepend
	$(MAKE) -C libregex
	$(MAKE) -C libz
	$(MAKE) -C libbzip2
	$(MAKE) -C liblzma
	$(MAKE) -C libmagic
	$(MAKE) -C libguess
	$(MAKE) -C libarchive
	$(MAKE) -C hunspell
endef
ifneq "" "$(filter mingw32 mingw64 win32,@build_os@)"
define contrib-allx
	$(MAKE) -C flex
	$(MAKE) -C libcitrus
	$(MAKE) -C libintl
	$(MAKE) -C libiconv
endef
endif

define contrib-clean
	$(MAKE) -C makedepend  clean
	$(MAKE) -C libregex    clean
	$(MAKE) -C libz        clean
	$(MAKE) -C libbzip2    clean
	$(MAKE) -C liblzma     clean
	$(MAKE) -C libmagic    clean
	$(MAKE) -C libguess    clean
	$(MAKE) -C libarchive  clean
	$(MAKE) -C hunspell    clean
endef
ifneq "" "$(filter mingw32 mingw64 win32,@build_os@)"
define contrib-cleanx
	$(MAKE) -C libcitrus   clean
	$(MAKE) -C libintl     clean
	$(MAKE) -C libiconv    clean
	$(MAKE) -C flex        clean
endef
endif

DIRECTORIES=\
	./include/.created 	\
	$(D_OBJ)/.created 	\
	$(D_LIB)/.created 	\
	$(D_BIN)/.created

.PHONY: 	build release debug
build:			directories
		$(contrib-all)
		$(contrib-allx)

release:
		$(MAKE) BUILD_TYPE=release $(filter-out release, $(MAKECMDGOALS))
debug:
		$(MAKE) BUILD_TYPE=debug $(filter-out debug, $(MAKECMDGOALS))

.PHONY:		clean
clean:
		$(contrib-clean)
		$(contrib-cleanx)

directories:		$(DIRECTORIES)

%/.created:
		-@mkdir $(@D)
		@echo "do not delete, managed directory" > $@

#end
