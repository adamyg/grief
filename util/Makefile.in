@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
E=
O=		.o
H=		.h
A=		.a

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
RM=		@RM@
MV=		@MV@

# Common flags

XFLAGS=		
COPT=		@CFLAGS@
CWARN=		@CWARN@
CDEBUG=		@CDEBUG@
LDEBUG=		@LDEBUG@
CINCLUDE=	-I$(D_INC) @CINCLUDE@
CEXTRA=		@DEFS@
CFLAGS=		$(CDEBUG) $(COPT) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CNFLAGS=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
YFLAGS=		-d
LDFLAGS=	$(LDEBUG) @LDFLAGS@
LXFLAGS=	$(LDLIBS) @LIBS@ @LIBMALLOC@

RMFLAGS=	-f

# Directories

D_BIN=		$(ROOT)/bin
D_INC=		$(ROOT)/include
D_OBJ=		$(ROOT)/objects/util
D_LIB=		$(ROOT)/lib
D_GR=		$(ROOT)/gr

############################################################

GRTAGS=		$(D_BIN)/grtags$(E)
GRTAGSOBJS=	$(D_OBJ)/grtags$(O)	\
		$(D_OBJ)/arg$(O)	\
		$(D_OBJ)/tagsex$(O)	\
		$(D_OBJ)/tagse$(O)

GRWC=		$(D_BIN)/grwc$(E)
GRWCOBJS=	$(D_OBJ)/grwc$(O)	\
		$(D_OBJ)/fmt_scaled$(O)	\
		$(D_OBJ)/err$(O)

TARGETS=	$(GRTAGS)		\
		$(GRWC)

OBJS=		$(GRTAGSOBJS)		\
		$(GRWCOBJS)

LDLIBS=		-L$(D_LIB) -lllist -lmisc

all:		$(TARGETS)

$(GRTAGS):		$(D_OBJ)/.created $(GRTAGSOBJS)
		$(CC) $(LDFLAGS) -o $@ $(GRTAGSOBJS) $(LXFLAGS)

$(GRWC):		$(D_OBJ)/.created $(GRWCOBJS)
		$(CC) $(LDFLAGS) -o $@ $(GRWCOBJS) $(LXFLAGS)

$(D_OBJ)/.created:
		-@mkdir $(D_OBJ)
		@echo "do not delete" > $@

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(TARGETS) $(OBJS) $(CLEAN) $(XCLEAN) >/dev/null 2>&1

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -o $@ -c $<

$(D_OBJ)/%$(O):		$(D_GR)/%$(C)
		$(CC) $(CFLAGS) -o $@ -c -DGRTAGS $<

#end
