@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
O=		.o
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out

# Compilers, programs

CC=		@CC@
AR=		@AR@
RANLIB=		@RANLIB@
PERL=		@PERL@
RM=		@RM@

# Common flags

ARFLAGS=	rcv
XFLAGS=		
COPT=		@CFLAGS@
CWARN=		@CWARN@
CDEBUG=		@CDEBUG@
LDEBUG=		@LDEBUG@
CINCLUDE=	-I$(D_INC) @CINCLUDE@
ifeq ("mingw32","@build_os@")
CINCLUDE+=	-I../libw32
endif
CEXTRA=		@DEFS@ -D_BSD_SOURCE -DFTP_COMBINE_CWDS -DWITH_SSL
CFLAGS=		$(CDEBUG) $(COPT) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CNFLAGS=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
YFLAGS=		-d
LDFLAGS=	$(LDEBUG) @LDFLAGS@
LXFLAGS=	$(LDLIBS) @LIBS@ @LIBMALLOC@

RMFLAGS=	-f

# Directories

D_BIN=		$(ROOT)/bin
D_INC=		$(ROOT)/include
D_OBJ=		$(ROOT)/objects/libbsdfetch
D_LIB=		$(ROOT)/lib

############################################################

LIBROOT=	bsdfetch

LIBOBJS=\
	$(D_OBJ)/common$(O)		\
	$(D_OBJ)/fetch$(O)		\
	$(D_OBJ)/file$(O)		\
	$(D_OBJ)/ftp$(O)		\
	$(D_OBJ)/ftpmlsx$(O)		\
	$(D_OBJ)/ftpeplf$(O)		\
	$(D_OBJ)/ftplist$(O)		\
	$(D_OBJ)/ftputil$(O)		\
	$(D_OBJ)/http$(O)		\
	$(D_OBJ)/md5$(O)

LIBRARY=	$(D_LIB)/$(LP)$(LIBROOT)$(A)

all:			generate $(LIBRARY)

$(LIBRARY):		$(D_OBJ)/.created $(LIBOBJS)
		$(RM) $(RMFLAGS) $@
		$(AR) $(ARFLAGS) $@ $(LIBOBJS)
		$(RANLIB) $@

CLEAN +=	ftperr.h httperr.h
generate:	ftperr.h httperr.h

ftperr.h:		ftp_errors.in Makefile
		@$(PERL) mkerrors.pl -o $@ $<

httperr.h:		http_errors.in Makefile
		@$(PERL) mkerrors.pl -o $@ $<

$(D_OBJ)/.created:
		-@mkdir $(D_OBJ)
		@echo "do not create" > $@

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(LIBRARY) $(LIBOBJS) $(CLEAN) $(XCLEAN) >/dev/null 2>&1

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -o $@ -c $<

#end
