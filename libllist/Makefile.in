@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
O=		.o
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
AR=		@AR@
RANLIB=		@RANLIB@
RM=		@RM@

# Common flags

ARFLAGS=	rcv
XFLAGS=		
COPT=		@CFLAGS@
CWARN=		@CWARN@
CDEBUG=		@CDEBUG@
LDEBUG=		@LDEBUG@
CINCLUDE=	-I$(D_INC) @CINCLUDE@
CEXTRA=		@DEFS@
CFLAGS=		$(CDEBUG) $(COPT) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CNFLAGS=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
YFLAGS=		-d
LDFLAGS=	$(LDEBUG) @LDFLAGS@
LXFLAGS=	$(LDLIBS) @LIBS@ @LIBMALLOC@

RMFLAGS=	-f

# Directories

D_BIN=		$(ROOT)/bin
D_INC=		$(ROOT)/include
D_OBJ=		$(ROOT)/objects/libllist
D_LIB=		$(ROOT)/lib

############################################################

LIBROOT=	llist

LIBOBJS=	$(D_OBJ)/llalloc$(O)		\
		$(D_OBJ)/llappend$(O)		\
		$(D_OBJ)/llclear$(O)		\
		$(D_OBJ)/lldelete$(O)		\
		$(D_OBJ)/llelem$(O)		\
		$(D_OBJ)/llfirst$(O)		\
		$(D_OBJ)/llfree$(O)		\
		$(D_OBJ)/llhook$(O)		\
		$(D_OBJ)/llinit$(O)		\
		$(D_OBJ)/llinsert$(O)		\
		$(D_OBJ)/lllast$(O)		\
		$(D_OBJ)/lllength$(O)		\
		$(D_OBJ)/lllook$(O)		\
		$(D_OBJ)/llmagic$(O)		\
		$(D_OBJ)/llnext$(O)		\
		$(D_OBJ)/llprev$(O)		\
		$(D_OBJ)/llpush$(O)		\
		$(D_OBJ)/llremove$(O)		\
		$(D_OBJ)/llunhook$(O)

LIBRARY=	$(D_LIB)/$(LP)$(LIBROOT)$(A)

all:			$(LIBRARY)

$(LIBRARY):		$(D_OBJ)/.created $(LIBOBJS)
		$(RM) $(RMFLAGS) $@
		$(AR) $(ARFLAGS) $@ $(LIBOBJS)
		$(RANLIB) $@

$(D_OBJ)/.created:
		-@mkdir $(D_OBJ)
		@echo "do not delete, make managed content" > $@

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(LIBRARY) $(LIBOBJS) $(CLEAN) $(XCLEAN) >/dev/null 2>&1

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -o $@ -c $<

#end
