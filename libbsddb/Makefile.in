@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
O=		.o
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out

# Compilers, programs

CC=		@CC@
AR=		@AR@
RANLIB=		@RANLIB@
RM=		@RM@

# Common flags

ARFLAGS=	rcv
XFLAGS=		
COPT=		@CFLAGS@
CWARN=		@CWARN@
CDEBUG=		@CDEBUG@
LDEBUG=		@LDEBUG@
CINCLUDE=	-I. -I$(D_INC) @CINCLUDE@
ifeq ("mingw32","@build_os@")
CINCLUDE+=	-I../libw32
endif
CEXTRA=		@DEFS@ -D__DBINTERFACE_PRIVATE -DHAVE_NBTOOL_CONFIG_H -DDEBUG -DSTATISTICS
CFLAGS=		$(CDEBUG) $(COPT) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CNFLAGS=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
YFLAGS=		-d
LDFLAGS=	$(LDEBUG) @LDFLAGS@
LXFLAGS=	$(LDLIBS) @LIBS@ @LIBMALLOC@

RMFLAGS=	-f

# Directories

D_BIN=		$(ROOT)/bin
D_INC=		$(ROOT)/include
D_OBJ=		$(ROOT)/objects/libbsddb
D_LIB=		$(ROOT)/lib

############################################################

LIBROOT=	bsddb

VPATH=		. hash btree recno mpool

LIBOBJS=\
	$(D_OBJ)/hash$(O)		\
	$(D_OBJ)/hash_bigkey$(O)	\
	$(D_OBJ)/hash_buf$(O)		\
	$(D_OBJ)/hash_func$(O)		\
	$(D_OBJ)/hash_log2$(O)		\
	$(D_OBJ)/hash_page$(O)		\
	$(D_OBJ)/ndbm$(O)		\
	$(D_OBJ)/ndbmdatum$(O)		\
	\
	$(D_OBJ)/bt_close$(O)		\
	$(D_OBJ)/bt_conv$(O)		\
	$(D_OBJ)/bt_debug$(O)		\
	$(D_OBJ)/bt_delete$(O)		\
	$(D_OBJ)/bt_get$(O)		\
	$(D_OBJ)/bt_open$(O)		\
	$(D_OBJ)/bt_overflow$(O)	\
	$(D_OBJ)/bt_page$(O)		\
	$(D_OBJ)/bt_put$(O)		\
	$(D_OBJ)/bt_search$(O)		\
	$(D_OBJ)/bt_seq$(O)		\
	$(D_OBJ)/bt_split$(O)		\
	$(D_OBJ)/bt_utils$(O)		\
	\
	$(D_OBJ)/rec_close$(O)		\
	$(D_OBJ)/rec_delete$(O)		\
	$(D_OBJ)/rec_get$(O)		\
	$(D_OBJ)/rec_open$(O)		\
	$(D_OBJ)/rec_put$(O)		\
	$(D_OBJ)/rec_search$(O)		\
	$(D_OBJ)/rec_seq$(O)		\
	$(D_OBJ)/rec_utils$(O)		\
	\
	$(D_OBJ)/libpaths$(O)		\
	$(D_OBJ)/mpool$(O)		\
	$(D_OBJ)/db$(O)

LIBRARY=	$(D_LIB)/$(LP)$(LIBROOT)$(A)

all:			$(LIBRARY)

$(LIBRARY):		$(D_OBJ)/.created $(LIBOBJS)
		$(RM) $(RMFLAGS) $@
		$(AR) $(ARFLAGS) $@ $(LIBOBJS)
		$(RANLIB) $@

$(D_OBJ)/.created:
		-@mkdir $(D_OBJ)
		@echo "do not create" > $@

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(LIBRARY) $(LIBOBJS) $(CLEAN) $(XCLEAN)

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -o $@ -c $<

#end
