MANDOC=		$(D_BIN)/grmandoc$(E)

	#---------------------------------------------------

CGI_OBJS=\
	$(MANDOC_HTML_OBJS)		\
	$(D_OBJ)/cgi$(O)		\
	$(D_OBJ)/mansearch$(O)		\
	$(D_OBJ)/out$(O)		\
	$(D_OBJ)/tag$(O)		\
