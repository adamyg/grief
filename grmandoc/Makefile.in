MANDOC_OBJS=\
	$(MANDOC_HTML_OBJS)		\
	$(MANDOC_MAN_OBJS)		\
	$(MANDOC_TERM_OBJS)		\
	$(D_OBJ)/main$(O)		\
	$(D_OBJ)/manpath$(O)		\
