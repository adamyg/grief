@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
O=		.o
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
AR=		@AR@
RANLIB=		@RANLIB@
RM=		@RM@

# Common flags

ARFLAGS=	rcv
XFLAGS=		
COPT=		@CFLAGS@
CWARN=		@CWARN@
CDEBUG=		@CDEBUG@
LDEBUG=		@LDEBUG@
CINCLUDE=	-I$(D_INC) @CINCLUDE@
ifeq ("mingw32","@build_os@")
CINCLUDE+=	-I../libw32
endif
CEXTRA=		@DEFS@
CFLAGS=		$(CDEBUG) $(COPT) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CNFLAGS=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
YFLAGS=		-d
LDFLAGS=	$(LDEBUG) @LDFLAGS@
LXFLAGS=	$(LDLIBS) @LIBS@

RMFLAGS=	-f

# Directories

D_BIN=		$(ROOT)/bin
D_INC=		$(ROOT)/include
D_OBJ=		$(ROOT)/objects/libvfs
D_LIB=		$(ROOT)/lib

############################################################

LIBROOT=	vfs

LIBOBJS=	$(D_OBJ)/vfs$(O)		\
		$(D_OBJ)/vfs_archive$(O)	\
		$(D_OBJ)/vfs_base$(O)		\
		$(D_OBJ)/vfs_cache$(O)		\
		$(D_OBJ)/vfs_class$(O)		\
		$(D_OBJ)/vfs_curl$(O)		\
		$(D_OBJ)/vfs_handle$(O)		\
		$(D_OBJ)/vfs_lookup$(O)		\
		$(D_OBJ)/vfs_mount$(O)		\
		$(D_OBJ)/vfs_node$(O)		\
		$(D_OBJ)/vfs_stream$(O)		\
		$(D_OBJ)/vfs_tree$(O)		\
		$(D_OBJ)/vfs_util$(O)		\
		$(D_OBJ)/vfs_vops$(O)		\
		$(D_OBJ)/vfs_glob$(O)

LIBRARY=	$(D_LIB)/$(LP)$(LIBROOT)$(A)

all:			$(LIBRARY)

$(LIBRARY):		$(D_OBJ)/.created $(LIBOBJS)
		$(RM) $(RMFLAGS) $@
		$(AR) $(ARFLAGS) $@ $(LIBOBJS)
		$(RANLIB) $@

$(D_OBJ)/.created:
		-@mkdir $(D_OBJ)
		@echo "do not delete" > $@

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(LIBRARY) $(LIBOBJS) $(CLEAN) $(XCLEAN) >/dev/null 2>&1

LDLIBS=		-L$(D_LIB) -l$(LIBROOT) -lmisc

vfstest$(E):		$(D_OBJ)/vfstest$(O) $(LIBRARY)
		$(CC) $(LDFLAGS) -o $@ $(D_OBJ)/sptest$(O) $(LXFLAGS)

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -o $@ -c $<

#end
